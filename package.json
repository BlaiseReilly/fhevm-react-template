{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic SDK for building confidential dApps with Zama FHEVM",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "build:all": "npm run build:sdk && npm run build:examples",
    "build:examples": "npm run build:nextjs-privacy && npm run build:nextjs-basic",
    "build:nextjs-privacy": "cd examples/nextjs-privacy-review && npm run build",
    "build:nextjs-basic": "cd examples/nextjs-basic && npm run build",
    "dev:nextjs-privacy": "cd examples/nextjs-privacy-review && npm run dev",
    "dev:nextjs-basic": "cd examples/nextjs-basic && npm run dev",
    "dev:nodejs": "cd examples/nodejs-cli && npm run dev",
    "test": "npm run test:sdk && npm run test:examples",
    "test:sdk": "cd packages/fhevm-sdk && npm test",
    "test:examples": "cd examples/nextjs-privacy-review && npm test",
    "deploy:contracts": "cd examples/nextjs-privacy-review && npm run deploy:sepolia",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules packages/*/dist",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'"
  },
  "keywords": [
    "fhevm",
    "zama",
    "fhe",
    "homomorphic-encryption",
    "blockchain",
    "privacy",
    "sdk",
    "react",
    "nextjs",
    "vue",
    "nodejs",
    "universal-sdk",
    "web3"
  ],
  "author": "FHEVM SDK Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zama-ai/fhevm-react-template"
  }
}
